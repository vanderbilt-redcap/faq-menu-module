{
	"name": "FAQ Builder",

	"namespace": "Vanderbilt\\FaqMenuExternalModule",

	"authors": [
		{
			"name": "Eva Bascompte Moragas",
			"email": "datacore@vanderbilt.edu",
			"institution": "Vanderbilt University Medical Center"
		}
	],

	"permissions": [],

	"links": {
		"project": [
			{
				"name": "FAQ Builder",
				"icon": "blog_blue",
				"url": "configure.php"
			}
		]
	},

	"no-auth-pages":["configure","downloadFile","data_dictionary_upload"],

	"description": "Customizable FAQ menu to show a searcheable list of questions and their answers. <br><br><span style='color:red'>**To download a <strong>Data Dictionary</strong> example click on <em>View Documentation</em>.</span>",

	"project-settings": [
		{
			"key": "faq-btn",
			"name": "Favicon for the page",
			"type": "button",
			"url":
				{
					"name": "Upload Data Dictionary",
					"value": "data_dictionary_upload.php?configure",
					"message":"Data dictionary uploaded"
				}

		},
		{
			"key": "faq-favicon",
			"name": "Favicon for the page",
			"type": "file"
		},
		{
			"key": "faq-title",
			"name": "Title at the top of the page",
			"type": "text"
		},
		{
			"key": "faq-description",
			"name": "Descriptive text for the page",
			"type": "textarea"
		},
		{
			"key": "faq-privacy-description",
			"name": "<div>Select a privacy type for the FAQ builder:</div><br><div class='alert alert-info' style='border-color:#bce8f1 !important'><ul><li><strong>Public</strong> (no login required; anyone with the link can view/access the FAQ page)</li><li><strong>This Project's users only</strong> (REDCap login required; only users on this project can access the FAQ page)</li><li><strong>A different Project's users</strong> (REDCap login required; only users from another project can access the FAQ page)</li></ul></div>",
			"type": "descriptive"
		},
		{
			"key": "faq-privacy",
			"name": "Privacy type",
			"required": true,
			"choices": [
				{
					"name": "Public",
					"value": "public"
				},
				{
					"name": "This Project's users only",
					"value": "main"
				},
				{
					"name": "A different Project's users",
					"value": "other"
				}
			],
			"type":"radio"
		},
		{
			"key": "projects",
			"name": "Select the project/s whose people can access the FAQ",
			"type": "sub_settings",
			"repeatable":true,
			"branchingLogic": {
				"field": "faq-privacy",
				"op":"=",
				"value": "other"
			},
			"sub_settings":[
				{
					"key": "faq-project",
					"name": "Project",
					"type": "project-id"
				}
			]
		}

	]
}
